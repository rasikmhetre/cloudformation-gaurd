{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Resources": {
    "DemoDashboardStagingS3Bucket" : {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls" : false,
          "BlockPublicPolicy" : false,
          "IgnorePublicAcls" : false,
          "RestrictPublicBuckets" : false
        },
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "index.html"
        }
      }
    },
    "DemoDashboardStagingS3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "DemoDashboardStagingS3Bucket"
        },
        "PolicyDocument": {
          "Version": "2008-10-17",
          "Statement": [
            {
              "Sid": "AllowReadOnlyAccess",
              "Effect": "Allow",
              "Principal": "*",
              "Action": [
                "s3:GetObject"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    "/",
                    [
                      {
                        "Fn::GetAtt": [
                          "DemoDashboardStagingS3Bucket",
                          "Arn"
                        ]
                      },
                      "*"
                    ]
                  ]
                },
                {
                  "Fn::GetAtt": [
                    "DemoDashboardStagingS3Bucket",
                    "Arn"
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "DemoDashboardStagingCloudFrontDistribution" : {
      "Type" : "AWS::CloudFront::Distribution",
      "Properties" : {
        "DistributionConfig" : {
          "Aliases": [
            "demo-staging.clevertap.com"
          ],
          "Origins" : [ {
            "DomainName" : {
              "Fn::GetAtt": [
                "DemoDashboardStagingS3Bucket",
                "DomainName"
              ]
            },
            "Id" : {
              "Fn::GetAtt": [
                "DemoDashboardStagingS3Bucket",
                "DomainName"
              ]
            },
            "S3OriginConfig" : {}
          }],
          "Enabled" : "true",
          "Comment" : "Cloudfront for Staging Demo Dashboard bucket",
          "DefaultRootObject" : "index.html",
          "CustomErrorResponses": [
            {
              "ErrorCode": 404,
              "ResponseCode": 200,
              "ResponsePagePath": "/index.html"
            },
            {
              "ErrorCode": 403,
              "ResponseCode": 200,
              "ResponsePagePath": "/index.html"
            }
          ],
          "DefaultCacheBehavior" : {
            "AllowedMethods" : ["GET", "HEAD"],
            "TargetOriginId" : {
              "Fn::GetAtt": [
                "DemoDashboardStagingS3Bucket",
                "DomainName"
              ]
            },
            "Compress": true,
            "ForwardedValues": {
              "QueryString": false
            },
            "ViewerProtocolPolicy" : "redirect-to-https"
          },
          "PriceClass" : "PriceClass_All",
          "ViewerCertificate": {
            "AcmCertificateArn": "arn:aws:acm:us-east-1:062484260092:certificate/ade792cc-5f0c-4188-9fec-681cde1c6e13",
            "MinimumProtocolVersion": "TLSv1.2_2018",
            "SslSupportMethod" : "sni-only"
          }
        }
      },
      "DependsOn": [
        "DemoDashboardStagingS3Bucket"
      ]
    },
    "DemoDashboardProductionS3Bucket" : {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
		{
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
            }
	}
          ]
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls" : false,
          "BlockPublicPolicy" : false,
          "IgnorePublicAcls" : false,
          "RestrictPublicBuckets" : false
        },
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "index.html"
        }
      }
    },
    "DemoDashboardProductionS3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "DemoDashboardProductionS3Bucket"
        },
        "PolicyDocument": {
          "Version": "2008-10-17",
          "Statement": [
            {
              "Sid": "AllowReadOnlyAccess",
              "Effect": "Allow",
              "Principal": "*",
              "Action": [
                "s3:GetObject"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    "/",
                    [
                      {
                        "Fn::GetAtt": [
                          "DemoDashboardProductionS3Bucket",
                          "Arn"
                        ]
                      },
                      "*"
                    ]
                  ]
                },
                {
                  "Fn::GetAtt": [
                    "DemoDashboardProductionS3Bucket",
                    "Arn"
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "DemoDashboardProductionCloudFrontDistribution" : {
      "Type" : "AWS::CloudFront::Distribution",
      "Properties" : {
        "DistributionConfig" : {
          "Aliases": [
            "demo.clevertap.com"
          ],
          "Origins" : [ {
            "DomainName" : {
              "Fn::GetAtt": [
                "DemoDashboardProductionS3Bucket",
                "DomainName"
              ]
            },
            "Id" : {
              "Fn::GetAtt": [
                "DemoDashboardProductionS3Bucket",
                "DomainName"
              ]
            },
            "S3OriginConfig" : {}
          }],
          "Enabled" : "true",
          "Comment" : "Cloudfront for Production Demo Dashboard bucket",
          "DefaultRootObject" : "index.html",
          "CustomErrorResponses": [
            {
              "ErrorCode": 404,
              "ResponseCode": 200,
              "ResponsePagePath": "/index.html"
            },
            {
              "ErrorCode": 403,
              "ResponseCode": 200,
              "ResponsePagePath": "/index.html"
            }
          ],
          "DefaultCacheBehavior" : {
            "AllowedMethods" : ["GET", "HEAD"],
            "TargetOriginId" : {
              "Fn::GetAtt": [
                "DemoDashboardProductionS3Bucket",
                "DomainName"
              ]
            },
            "Compress": true,
            "ForwardedValues": {
              "QueryString": false
            },
            "ViewerProtocolPolicy" : "redirect-to-https"
          },
          "PriceClass" : "PriceClass_All",
          "ViewerCertificate": {
            "AcmCertificateArn": "arn:aws:acm:us-east-1:062484260092:certificate/82c1a890-8a05-4f24-a37a-cb6cfd6dd145",
            "MinimumProtocolVersion": "TLSv1.2_2018",
            "SslSupportMethod" : "sni-only"
          }
        }
      },
      "DependsOn": [
        "DemoDashboardProductionS3Bucket"
      ]
    }
  }
}
