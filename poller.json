{
  "Parameters": {
    "NetworkStack": {
      "Description": "Name of the stack that this stack references for networking and shared resources",
      "Default": "",
      "Type": "String"
    }
  },
  "Conditions": {
    "StackIsEu1": {
      "Fn::Equals": [
        {
          "Ref": "NetworkStack"
        },
        "eu1"
      ]
    },
    "StackIsNotEu1PollerStaging1": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            {
              "Ref": "AWS::StackName"
            },
            "eu1-Poller-Staging-1"
          ]
        }
      ]
    },
    "StackIsEu1AndStackIsNotEu1PollerStaging1": {
      "Fn::And": [
        {"Condition": "StackIsNotEu1PollerStaging1"},
        {"Condition": "StackIsEu1"}
      ]
    },
    "StackIsSk1": {
      "Fn::Equals": [
        {
          "Ref": "NetworkStack"
        },
        "sk1"
      ]
    },
    "StackIsNotAPS3NorMEC1": {
      "Fn::Not": [
        {
          "Fn::Or": [
            {
              "Fn::Equals": [
                {
                  "Ref": "NetworkStack"
                },
                "aps3"
              ]
            },
            {
              "Fn::Equals": [
                {
                  "Ref": "NetworkStack"
                },
                "mec1"
              ]
            }
          ]
        }
      ]
    },
    "StackIsSk1Poller": {
        "Fn::Equals": [
          {
            "Ref": "AWS::StackName"
          },
          "sk1-Poller"
  ]
}
  },
  "Resources": {
    "PollerV3EcsCluster": {
      "Properties": {},
      "Type": "AWS::ECS::Cluster"
    },
    "SfdcSecretsManagerSecret": {
      "Properties": {
        "Description": {
          "Fn::Sub": "This is a Secrets Manager secret for ${AWS::StackName}-SfdcSecretsManagerSecret"
        },
        "SecretString": "{\"SFDC_PROD_SECRET\":\"replacewithprodsecret\"}"
      },
      "Type": "AWS::SecretsManager::Secret"
    },
    "DummySecretsManagerSecret": {
      "Condition": "StackIsSk1",
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "ReplicaRegions": [
          {
            "Region" : "eu-west-1"
          }
        ],
        "Description": {
          "Fn::Sub": "This is a Secrets Manager secret for ${AWS::StackName}-DummySecretsManagerSecret"
        },
        "SecretString": "replaceme"
      }
    },
    "Dummy2SecretsManagerSecret": {
      "Condition": "StackIsSk1",
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "ReplicaRegions": [
          {
            "Region" : "eu-west-1"
          }
        ],
        "Description": {
          "Fn::Sub": "This is a Secrets Manager secret for ${AWS::StackName}-Dummy2SecretsManagerSecret"
        },
        "SecretString": "replaceme"
      }
    },
    "BambooAuthKeySecretsManagerSecret": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Description": {
          "Fn::Sub": "This is a Secrets Manager secret for ${AWS::StackName}-BambooAuthKeySecretsManagerSecret"
        },
        "SecretString": "replaceme"
      }
    },
    "SfdcTokenSecretsManagerSecret": {
      "Properties": {
        "Description": {
          "Fn::Sub": "This is a Secrets Manager secret for ${AWS::StackName}-SfdcTokenSecretsManagerSecret"
        },
        "SecretString": "{\"SFDC_PROD_TOKEN\":\"replacewithprodsecret\"}"
      },
      "Type": "AWS::SecretsManager::Secret"
    },
    "SfdcPasswordSecretsManagerSecret": {
      "Properties": {
        "Description": {
          "Fn::Sub": "This is a Secrets Manager secret for ${AWS::StackName}-SfdcPasswordSecretsManagerSecret"
        },
        "SecretString": "{\"SFDC_PROD_PASSWORD\":\"replacewithprodpassword\"}"
      },
      "Type": "AWS::SecretsManager::Secret"
    },
    "BambooAccessTokenClientIdSecretsManagerSecret": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Description": {
          "Fn::Sub": "This is a Secrets Manager secret for poller to bamboo access secret token id"
        },
        "SecretString" : "<replaceme>"
      }
    },
    "BambooAccessTokenClientSecretSecretsManagerSecret": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Description": {
          "Fn::Sub": "This is a Secrets Manager secret for poller to bamboo access secret token secret"
        },
        "SecretString" : "<replaceme>"
      }
    },
    "PollerHeapDumpV2AccessPoint": {
      "DependsOn": [
        "PollerHeapDumpV2EfsFileSystem"
      ],
      "Properties": {
        "AccessPointTags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  {
                    "Ref": "AWS::StackName"
                  },
                  "HeapDumpAccessPoint"
                ]
              ]
            }
          }
        ],
        "FileSystemId": {
          "Ref": "PollerHeapDumpV2EfsFileSystem"
        },
        "PosixUser": {
          "Gid": "8010",
          "Uid": "8010"
        },
        "RootDirectory": {
          "CreationInfo": {
            "OwnerGid": "8010",
            "OwnerUid": "8010",
            "Permissions": "0755"
          },
          "Path": "/poller"
        }
      },
      "Type": "AWS::EFS::AccessPoint"
    },
    "PollerHeapDumpEfsVolumeKmsKey": {
      "Properties": {
        "Description": "KMS key used for Encrypted volume",
        "EnableKeyRotation": true,
        "Enabled": true,
        "KeyPolicy": {
          "Id": "key-default-1",
          "Statement": [
            {
              "Action": "kms:*",
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::Join": [
                    ":",
                    [
                      "arn:aws:iam:",
                      {
                        "Ref": "AWS::AccountId"
                      },
                      "root"
                    ]
                  ]
                }
              },
              "Resource": "*",
              "Sid": "AllowIamUsersAndRolesInTheAccountAccessToThisCmk"
            }
          ],
          "Version": "2012-10-17"
        },
        "Tags": [
          {
            "Key": "ct-aws:cloudformation:stack-name",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Identifier",
            "Value": {
              "Fn::Sub": "${AWS::StackName}-PollerHeapDumpEfsVolumeKmsKey"
            }
          }
        ]
      },
      "Type": "AWS::KMS::Key"
    },
    "PollerHeapDumpV2EfsFileSystem": {
      "Properties": {
        "Encrypted": true,
        "FileSystemTags": [
          {
            "Key": "Name",
            "Value": "PollerHeapDumpEfs"
          }
        ],
        "KmsKeyId": {
          "Ref": "PollerHeapDumpEfsVolumeKmsKey"
        },
        "PerformanceMode": "generalPurpose"
      },
      "Type": "AWS::EFS::FileSystem"
    },
    "PollerHeapDump1aEc2SubnetV2EfsMountTarget": {
      "Properties": {
        "FileSystemId": {
          "Ref": "PollerHeapDumpV2EfsFileSystem"
        },
        "SecurityGroups":
        [

          {
            "Fn::ImportValue": {
              "Fn::Join": [
                "-",
                [
                  {
                    "Ref": "NetworkStack"
                  },
                  "SecurityGroup-PollerHeapDumpEfsEC2SecurityGroupId"
                ]
              ]
            }
          }

        ],
        "SubnetId": {
          "Fn::ImportValue": {
            "Fn::Join": [
              "-",
              [
                {
                  "Ref": "NetworkStack"
                },
                "HeapDumpEfs1aSubnetId"
              ]
            ]
          }
        }
      },
      "Type": "AWS::EFS::MountTarget"
    },
    "SecretEncryptionKmsKey": {
      "Condition": "StackIsSk1Poller",
      "Properties": {
        "Description": "KMS key used for Encrypting secrets manager secret",
        "EnableKeyRotation": true,
        "Enabled": true,
        "KeyPolicy": {
          "Id": "key-default-1",
          "Statement": [
            {
              "Action": "kms:*",
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::Join": [
                    ":",
                    [
                      "arn:aws:iam:",
                      {
                        "Ref": "AWS::AccountId"
                      },
                      "root"
                    ]
                  ]
                }
              },
              "Resource": "*",
              "Sid": "EnableIamPoliciesToGiveIamUsersAndRolesInTheAccountAccessToThisCmk"
            }
          ],
          "Version": "2012-10-17"
        },
        "Tags": [
          {
            "Key": "ct-aws:cloudformation:stack-name",
            "Value": {
              "Ref": "AWS::StackName"
            }
          }
        ]
      },
      "Type": "AWS::KMS::Key"
    },
    "SecretEncryptionKmsAlias": {
      "Condition": "StackIsSk1Poller",
      "Type": "AWS::KMS::Alias",
      "Properties": {
        "AliasName": "alias/SecretEncryptionKmsKey",
        "TargetKeyId": {
          "Ref": "SecretEncryptionKmsKey"
        }
      }
    }
  },
  "Outputs": {
    "PollerHeapDumpV2AccessPoint": {
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-PollerHeapDumpV2AccessPointId"
        }
      },
      "Value": {
        "Ref": "PollerHeapDumpV2AccessPoint"
      }
    },
    "PollerHeapDumpV2EfsFileSystem": {
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-PollerHeapDumpV2EfsFileSystemId"
        }
      },
      "Value": {
        "Ref": "PollerHeapDumpV2EfsFileSystem"
      }
    },
    "PollerV3EcsClusterName": {
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-PollerV3EcsClusterName"
        }
      },
      "Value": {
        "Ref": "PollerV3EcsCluster"
      }
    },
    "SfdcPasswordSecretsManagerSecretName": {
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-SfdcPasswordSecretsManagerSecretName"
        }
      },
      "Value": {
        "Ref": "SfdcPasswordSecretsManagerSecret"
      }
    },
    "SfdcSecretsManagerSecretName": {
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-SfdcSecretsManagerSecretName"
        }
      },
      "Value": {
        "Ref": "SfdcSecretsManagerSecret"
      }
    },
    "DummySecretsManagerSecretName": {
      "Condition": "StackIsSk1",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-DummySecretsManagerSecretName"
        }
      },
      "Value": {
        "Ref": "DummySecretsManagerSecret"
      }
    },
    "Dummy2SecretsManagerSecretName": {
      "Condition": "StackIsSk1",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-Dummy2SecretsManagerSecretName"
        }
      },
      "Value": {
        "Ref": "Dummy2SecretsManagerSecret"
      }
    },
    "BambooAuthKeySecretsManagerSecretArn": {
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-BambooAuthKeySecretsManagerSecretArn"
        }
      },
      "Value": {
        "Ref": "BambooAuthKeySecretsManagerSecret"
      }
    },
    "DummyReplicaSecretsManagerSecretName": {
      "Condition": "StackIsSk1",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-DummyReplicaSecretsManagerSecretName"
        }
      },
      "Value": {
        "Fn::Sub":[
          "arn:aws:secretsmanager:${replicaregion}:${AWS::AccountId}:secret:${secretname}*",
          {
            "replicaregion": "eu-west-1",
            "secretname":{ 
              "Fn::Select" : [ 
                "6", { 
                  "Fn::Split": [
                    ":", {
                      "Fn::GetAtt":[
                        "DummySecretsManagerSecret",
                        "Id"
                      ]      
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "Dummy2ReplicaSecretsManagerSecretName": {
      "Condition": "StackIsSk1",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-Dummy2ReplicaSecretsManagerSecretName"
        }
      },
      "Value": {
        "Fn::Sub":[
          "arn:aws:secretsmanager:replicaregion:${AWS::AccountId}:secret:secretname*",
          {
            "replicaregion": "eu-west-1",
            "secretname":{ 
              "Fn::Select" : [ 
                "6", { 
                  "Fn::Split": [
                    ":", {
                      "Fn::GetAtt":[
                        "Dummy2SecretsManagerSecret",
                        "Id"
                      ]      
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "SfdcTokenSecretsManagerSecretName": {
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-SfdcTokenSecretsManagerSecretName"
        }
      },
      "Value": {
        "Ref": "SfdcTokenSecretsManagerSecret"
      }
    },
    "BambooAccessTokenClientIdSecretsManagerSecretArn": {
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-BambooAccessTokenClientIdSecretsManagerSecretArn"
        }
      },
      "Value": {
        "Ref": "BambooAccessTokenClientIdSecretsManagerSecret"
      }
    },
    "BambooAccessTokenClientSecretSecretsManagerSecretArn": {
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-BambooAccessTokenClientSecretSecretsManagerSecretArn"
        }
      },
      "Value": {
        "Ref": "BambooAccessTokenClientSecretSecretsManagerSecret"
      }
    }
  }
}
